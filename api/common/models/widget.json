{
  "name": "Widget",
  "plural": "Widgets",
  "base": "PersistedModel",
  "idInjection": true,
  "options": {
    "validateUpsert": true
  },
  "properties": {
    "name": {
      "type": "string",
      "required": true
    },
    "icon": {
      "type": "string"
    },
    "description": {
      "type": "string"
    },
    "type": {
      "type": "string",
      "required": true
    },
    "width": {
      "type": "string",
      "required": true
    },
    "filter": {
      "type": "object"
    },
    "options": {
      "type": "object"
    },
    "data":{
      "type": [
        "object"
      ]
    }
  },
  "validations": [],
  "relations": {
    "user": {
      "type": "belongsTo",
      "model": "user"
    },
    "Dashboard": {
      "type": "belongsTo",
      "model": "Dashboard"
    }
  },
  "acls": [],
  "methods": {},
  "mixins": {
    "FireLoop": false,
    "TimeStamp": {
      "required": false,
      "validateUpsert": true
    },
    "Stats": [
      {
        "method": "stats",
        "endpoint": "/stats",
        "description": "Statistical information for Widget registers.",
        "type": "model",
        "count": {
          "on": "createdAt",
          "by": "index"
        }
      }
    ]
  }
}
