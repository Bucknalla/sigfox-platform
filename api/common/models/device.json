{
  "name": "Device",
  "plural": "Devices",
  "base": "PersistedModel",
  "idInjection": false,
  "options": {
    "validateUpsert": true
  },
  "mixins": {
    "FireLoop": true,
    "TimeStamp": {
      "required": false,
      "validateUpsert": true
    },
    "Stats": [
      {
        "method": "stats",
        "endpoint": "/stats",
        "description": "Statistical information for Device registers.",
        "type": "model",
        "count": {
          "on": "createdAt",
          "by": "index"
        }
      }
    ]
  },
  "properties": {
    "id": {
      "type": "string",
      "id": true,
      "required": true
    },
    "creation": {
      "type": "date"
    },
    "name": {
      "type": "string"
    },
    "dl_payload": {
      "type": "string"
    },
    "location": {
      "type": [
        "Geoloc"
      ]
    },
    "properties": {
      "type": [
        "object"
      ]
    }
  },
  "validations": [],
  "relations": {
    "Parser": {
      "type": "belongsTo",
      "model": "Parser"
    },
    "user": {
      "type": "belongsTo",
      "model": "user"
    },
    "Organization": {
      "type": "belongsTo",
      "model": "Organization"
    },
    "Messages": {
      "type": "hasMany",
      "model": "Message"
    },
    "Category": {
      "type": "belongsTo",
      "model": "Category"
    }
  },
  "acls": [
    {
      "accessType": "*",
      "principalType": "ROLE",
      "principalId": "$unauthenticated",
      "permission": "DENY"
    },
    {
      "accessType": "CREATE",
      "principalType": "ROLE",
      "principalId": "$authenticated",
      "permission": "ALLOW"
    },
    {
      "accessType": "*",
      "principalType": "ROLE",
      "principalId": "admin",
      "permission": "ALLOW"
    },
    {
      "accessType": "*",
      "principalType": "ROLE",
      "principalId": "user",
      "permission": "ALLOW"
    },
    {
      "accessType": "*",
      "principalType": "ROLE",
      "principalId": "$owner",
      "permission": "ALLOW"
    },
    {
      "accessType": "*",
      "principalType": "ROLE",
      "principalId": "organizationMember",
      "permission": "ALLOW"
    }
  ],
  "methods": {}
}
