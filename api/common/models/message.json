{
  "name": "Message",
  "plural": "Messages",
  "base": "PersistedModel",
  "idInjection": true,
  "options": {
    "validateUpsert": true
  },
  "mixins": {
    "FireLoop": true,
    "TimeStamp": {
      "required": false
    },
    "Stats": [
      {
        "method": "stats",
        "endpoint": "/stats",
        "description": "Statistical information for Message registers.",
        "type": "model",
        "count": {
          "on": "createdAt",
          "by": "index"
        }
      }
    ]
  },
  "properties": {
    "data": {
      "type": "string"
    },
    "time": {
      "type": "number"
    },
    "RSSI": {
      "type": "number"
    },
    "seqNumber": {
      "type": "number"
    },
    "GPS": {
      "type": {
        "lat": {
          "type": "number"
        },
        "lng": {
          "type": "number"
        }
      }
    },
    "geoloc_sigfox": {
      "type": {
        "lat": {
          "type": "number"
        },
        "lng": {
          "type": "number"
        },
        "precision": "number"
      }
    },
    "parsed_data": {
      "type": "object"
    }
  },
  "validations": [],
  "relations": {
    "Device": {
      "type": "belongsTo",
      "model": "Device"
    },
    "user": {
      "type": "belongsTo",
      "model": "user"
    },
    "BaseStations": {
      "type": "hasMany",
      "model": "BaseStation"
    }
  },
  "acls": [
    {
      "accessType": "*",
      "principalType": "ROLE",
      "principalId": "$unathenticated",
      "permission": "DENY"
    },
    {
      "accessType": "*",
      "principalType": "ROLE",
      "principalId": "admin",
      "permission": "ALLOW"
    },
    {
      "accessType": "READ",
      "principalType": "ROLE",
      "principalId": "$owner",
      "permission": "ALLOW"
    },
    {
      "accessType": "EXECUTE",
      "principalType": "ROLE",
      "principalId": "$owner",
      "permission": "ALLOW"
    },
    {
      "accessType": "WRITE",
      "principalType": "ROLE",
      "principalId": "$owner",
      "permission": "ALLOW"
    },
    {
      "principalType": "ROLE",
      "principalId": "$owner",
      "permission": "ALLOW",
      "property": "count"
    }

  ],
  "methods": {}
}
