{
  "name": "user",
  "plural": "users",
  "base": "User",
  "idInjection": true,
  "options": {
    "validateUpsert": true
  },
  "mixins": {
    "FireLoop": true,
    "TimeStamp": {
      "required": false,
      "validateUpsert": true
    },
    "Stats": [
      {
        "method": "stats",
        "endpoint": "/stats",
        "description": "Statistical information for user registers.",
        "type": "model",
        "count": {
          "on": "createdAt",
          "by": "index"
        }
      }
    ]
  },
  "properties": {
    "avatar": {
      "type": "string"
    },
    "lastLogin": {
      "type": "date"
    },
    "location": {
      "type": "Geoloc"
    },
    "name": {
      "type": "string"
    }
  },
  "validations": [],
  "relations": {
    "Organizations": {
      "type": "hasAndBelongsToMany",
      "model": "Organization"
    },
    "roles": {
      "type": "hasMany",
      "model": "Role",
      "foreignKey": "principalId",
      "through": "RoleMapping"
    },
    "Messages": {
      "type": "hasMany",
      "model": "Message"
    },
    "Devices": {
      "type": "hasMany",
      "model": "Device"
    },
    "Categories": {
      "type": "hasMany",
      "model": "Category"
    }
  },
  "acls": [
    {
      "accessType": "*",
      "principalType": "ROLE",
      "principalId": "$owner",
      "permission": "ALLOW"
    },
    {
      "accessType": "*",
      "principalType": "ROLE",
      "principalId": "admin",
      "permission": "ALLOW"
    }
  ],
  "methods": {}
}
