{
  "name": "user",
  "plural": "users",
  "base": "User",
  "idInjection": true,
  "options": {
    "validateUpsert": true
  },
  "mixins": {
    "FireLoop": true,
    "TimeStamp": {
      "required": false
    },
    "Stats": [
      {
        "method": "stats",
        "endpoint": "/stats",
        "description": "Statistical information for user registers.",
        "type": "model",
        "count": {
          "on": "createdAt",
          "by": "index"
        }
      }
    ]
  },
  "properties": {
    "avatar": {
      "type": "string"
    },
    "lastLogin":{
      "type": "date"
    },
    "location":{
      "type": "object"
    }
  },
  "validations": [],
  "relations": {
    "Messages": {
      "type": "hasMany",
      "model": "Message"
    },
    "Devices": {
      "type": "hasMany",
      "model": "Device"
    }
  },
  "acls": [
    {
      "accessType": "*",
      "principalType": "ROLE",
      "principalId": "$authenticated",
      "permission": "ALLOW"
    }
  ],
  "methods": {}
}
